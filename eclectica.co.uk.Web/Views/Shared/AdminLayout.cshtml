@using System.Configuration;
@using MvcMiniProfiler;

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<title>Eclectica: design, photography, art, architecture and technology</title>
		<meta http-equiv="content-type" content="text/html;charset=utf-8" />
		<meta http-equiv="content-language" content="en-gb" />
		<link rel="shortcut icon" href="/content/img/site/favicon.ico" />

		
        <!--[if gt IE 6]><!-->
        <link rel="stylesheet" type="text/css" href="@ConfigurationManager.AppSettings["CDN1"]/content/css/screen.css" />
        <!--<![endif]-->

		<link rel="alternate" type="application/rss+xml" title="Latest 10 Items" href="http://eclectica.co.uk/feed/main/" />

		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
        @MiniProfiler.RenderIncludes(position: RenderPosition.Right, showTrivial: true, showTimeWithChildren: false)

        @RenderSection("head", false)
	</head>
	<body id="index">
		<div id="header">
	        <a id="logo" href="/" title="Eclectica Home Page" ><img src="@ConfigurationManager.AppSettings["CDN1"]/content/img/site/logo.gif" alt="Eclectica Home Page" width="74" height="74" /></a>
	       
        </div>
		<div id="content">

            <h1 class="postdate">Eclectica CMS</h1>
	        <div class="post">
		    @RenderSection("content", false)
            </div>

		</div>
		<div id="navigation">
            @if(Request.Url.AbsoluteUri.Contains("logon")) {
                <h3>&nbsp;</h3>
                <div>&nbsp;</div>
            } else {
		        <h3>Navigate</h3>
		        <div>
		            <ul id="mainnav">
		                <li>@Html.ActionLink("Manage Entries", "Manage", "Entry")</li>
		                <li>@Html.ActionLink("Manage Comments", "Manage", "Comment")</li>
		                <li>@Html.ActionLink("Manage Links", "Manage", "Link")</li>
                        <li>@Html.ActionLink("Create/Refresh Search Index", "CreateSearchIndex", "Entry")</li>
                        <li>@Html.ActionLink("Log Out", "LogOff", "Auth")</li>
	                </ul>
	            </div>
            }

            @RenderSection("sidebar", false)

		</div>
		<div class="clr">&nbsp;</div>
		<div id="footer">
	        <p id="copyright">&copy; 2009 <a href="http://markashleybell.com/">Mark Ashley Bell</a></p>
        </div>
		<script type="text/javascript" src="@ConfigurationManager.AppSettings["CDN1"]/scripts/load.js"></script>
		<script type="text/javascript" src="@ConfigurationManager.AppSettings["CDN1"]/scripts/search.js"></script>

	</body>
</html>